<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIRESTAURANTE.DatosFactura"
             Title="DatosFactura">

    <ScrollView>
        <StackLayout Margin="20">

            <!-- Título de la página -->
            <Label Text="Datos de Facturación" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

            <!-- Campo para el Nombre -->
            <Entry x:Name="nombreEntry" Placeholder="Nombre" Margin="0,10,0,0" />

            <!-- Campo para el RUC o Cédula -->
            <Entry x:Name="rucCedulaEntry" Placeholder="RUC o Cédula" Margin="0,10,0,0" />

            <!-- Campo para la Dirección -->
            <Entry x:Name="direccionEntry" Placeholder="Dirección" Margin="0,10,0,0" />

            <!-- Botón para generar la factura -->
            <Button Text="Generar Factura" Clicked="GenerarFactura_Clicked" BackgroundColor="#3498DB" TextColor="White" Margin="0,20,0,0" />

            <!-- Botón para generar la factura -->
            <Button Text="Cancelar" Clicked="OnClickCancelar" BackgroundColor="#3498DB" TextColor="White" Margin="0,20,0,0" />

        </StackLayout>
    </ScrollView>

</ContentPage>